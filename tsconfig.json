{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "compilerOptions.types_COMMENTOUT":[
    "node"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
  ],
  "include_COMMENTOUTS": [
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "node_modules"
  ],

  "jest-COMMENTOUT":{
    "COMMENT": "jestが動かない。。jestの設定を試しにこっちにも書いてみる",

    "jest": {
      "moduleFileExtensions": [
        "js",
        "ts",
        "json",
        "vue"
      ],
      "transform": {
        ".*\\.(vue)$": "vue-jest",
        "^.+\\.tsx?$": "ts-jest"
      },
      "testURL": "http://localhost/"
    }
  }
}
